<!DOCTYPE suite SYSTEM "../testng-1.0.dtd">
<suite name="Suite">

    <!-- RUN 1 : Draft -->
    <test name="Draft Flow">
        <parameter name="configFile" value="multipleusers_department.properties"/>
        <parameter name="expectedStatus" value="draft"/>

        <classes>
            <class name="testCasesForOQProjects.Department_TC">
                <methods>
                    <include name="url"/>
                    <include name="userLoginBeforeCreate"/>
                    <include name="moduleClick"/>
                    <include name="Creation_Of_Department"/>
                    <include name="ViewEdit_Icons_Validation"/>
                    <include name="Action_Menu_Validation"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- RUN 2 : Approved -->
    <test name="Approved Flow">
        <parameter name="configFile" value="multipleusers_department.properties"/>
        <parameter name="expectedStatus" value="approved"/>

        <classes>
            <class name="testCasesForOQProjects.Department_TC">
                <methods>
                    <include name="Department_Approve"/>
                    <include name="ViewEdit_Icons_Validation"/>
                    <include name="Action_Menu_Validation"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
